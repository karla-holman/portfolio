<div class="container">
	<div class="row">
		<div class="col-md-8">
			<h2>My Projects</h2>
		</div>
		<div class="col-md-4">
			<%= link_to "New Project", new_admin_project_path, class: "btn btn-info" %>
		</div>
		<div class="col-md-12">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Thumb</th>
							<th>Name</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					<thead>
					<tbody>
						<% @projects.each do |project| %>
							<tr>
								<td><%= image_tag project.thumb.url(:thumb), alt: "project.name" %></td>
								<td><%= link_to project.name, project_path(project) %></td>
								<td><%= project.description %></td>
								<td><%= button_to "Delete", admin_project_path(project), method: 'delete', class: "btn btn-danger" %><%= link_to "Images", admin_project_project_images_path(project), class: "btn btn-primary" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>