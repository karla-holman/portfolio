<div class="container">
	<div class="row">
		<div class="col-md-8">
			<h1>Images for <%= @project.name %></h1>
		</div>
		<div class="col-md-4">
			<%= link_to "New Image", new_admin_project_project_image_path(@project), class: "btn btn-primary" %>
		</div>
		<div class="col-md-12">
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @images.each do |image| %>
							<tr>
								<td><%= image_tag image.attachment.url(:thumb), alt: image.name, class: "icon" %></td>
								<td><%= image.name %></td>
								<td><%= image.description %></td>
								<td><%= link_to "Delete", admin_project_project_image_path(@project, image), method: :delete, class: "btn btn-error" %><%= link_to "Edit", edit_admin_project_project_image_path(@project, image) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>